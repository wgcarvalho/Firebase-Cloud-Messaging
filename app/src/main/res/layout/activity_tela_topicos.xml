<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TelaTopicos">

    <Button
        android:id="@+id/btnInscEsporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inscrever Esportes" />

    <Button
        android:id="@+id/btnInscCinema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inscrever Cinema" />

    <Button
        android:id="@+id/btnDesinscCinema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar Cinema" />

    <Button
        android:id="@+id/btnDesinscEsporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancelar Esporte" />
</LinearLayout>